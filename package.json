{
  "name": "@nomyx/gundb",
  "version": "1.0.1",
  "description": "A TypeScript wrapper for GunDB with additional features and utilities - works in both Node.js and browser environments",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/browser/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "browser": "./dist/browser/index.js",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "import": "./dist/browser/index.js",
      "require": "./dist/browser/index.js",
      "types": "./dist/browser/index.d.ts"
    },
    "./node": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run build:node && npm run build:browser && npm run build:esm",
    "build:node": "tsc --project tsconfig.json",
    "build:browser": "tsc --project tsconfig.browser.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:node": "jest --testEnvironment=node",
    "test:browser": "jest --testEnvironment=jsdom",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "gundb",
    "typescript",
    "database",
    "decentralized",
    "realtime",
    "browser",
    "nodejs",
    "isomorphic"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/nomyx/gundb.git"
  },
  "bugs": {
    "url": "https://github.com/nomyx/gundb/issues"
  },
  "homepage": "https://github.com/nomyx/gundb#readme",
  "dependencies": {
    "async-mutex": "^0.5.0",
    "gun": "^0.2020.1240",
    "joi": "^17.13.3",
    "sift": "^17.1.3",
    "uuid": "^10.0.0"
  },
  "optionalDependencies": {
    "@koa/cors": "^5.0.0",
    "dotenv": "^16.4.5",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/gun": "^0.9.6",
    "@types/jest": "^29.5.13",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "gun": "^0.2020.1240"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
